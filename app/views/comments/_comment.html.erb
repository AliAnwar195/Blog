<% unless comment.archived? %>
    <p>
        <strong><%= comment.commenter %>: </strong> 
        <%= comment.body %>
        
        <%= link_to "Delete", [comment.article, comment], data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        },
        class:"btn btn-primary btn-sm"
        %>
        
    </p>
    
<%end%>